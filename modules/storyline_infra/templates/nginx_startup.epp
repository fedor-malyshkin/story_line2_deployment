[Unit]
Description=web/proxy server
After=syslog.target
After=network.target

[Service]
Type=forking
PIDFile=<%= $storyline_infra::nginx::pid_file %>
WorkingDirectory=<%= $storyline_infra::nginx::dir_data %>

#User=nginx
#Group=nginx

Environment=PID="<%= $storyline_infra::nginx::pid_file -%>" OPTS="-c /etc/nginx/nginx.conf"
ExecStart=/usr/sbin/nginx $OPTS
TimeoutSec=30

[Install]
WantedBy=multi-user.target
