[Unit]
Description=news site crawler
After=syslog.target
After=network.target

[Service]
Type=forking
PIDFile=<%= $storyline_infra::crawler::pid_file -%>
WorkingDirectory=<%= $storyline_infra::crawler::dir_data -%>

User=crawler
Group=crawler

ExecStart=<%= $storyline_components::crawler::dir_bin -%>/crawler.sh start
TimeoutSec=30

[Install]
WantedBy=multi-user.target
