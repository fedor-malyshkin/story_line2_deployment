[Unit]
Description=monitoring metrics collector
After=syslog.target
After=network.target

[Service]
Type=forking
PIDFile=<%= $storyline_infra::telegraf::pid_file -%>
WorkingDirectory=<%= $storyline_infra::telegraf::dir_data -%>

# User=telegraf
# Group=telegraf

Environment=PID="<%= $storyline_infra::telegraf::pid_file -%>" OPTS="--config /etc/telegraf/telegraf.conf"
ExecStart=telegraf ${OPTS}
TimeoutSec=30

[Install]
WantedBy=multi-user.target
