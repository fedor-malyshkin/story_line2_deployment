[Unit]
Description=spark_worker
After=syslog.target
After=network.target

[Service]
Type=forking
PIDFile=<%= $storyline_components::spark::dir_logs -%>/spark_master.pid
WorkingDirectory=<%= $storyline_infra::spark::dir_data -%>

User=spark
Group=spark

ExecStart=<%= $storyline_components::spark::dir_bin -%>/spark_master.sh start
TimeoutSec=30

[Install]
WantedBy=multi-user.target
