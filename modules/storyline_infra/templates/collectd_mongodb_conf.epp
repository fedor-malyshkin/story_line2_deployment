TypesDB "/usr/share/collectd/mongodb/types.db"

<LoadPlugin python>
    Globals true
</LoadPlugin>

<Plugin python>
    # mongodb.py is at path /usr/share/collectd/mongodb.py
    ModulePath "/usr/share/collectd/"

    Import "mongodb"
    <Module mongodb>
        Host "127.0.0.1"
		User "<%= $storyline_infra::collectd::mongodb_user -%>"
		Password "<%= $storyline_infra::collectd::mongodb_password -%>"
        Database "admin" "crawler" "storyline"
    </Module>
</Plugin>
